<!--header-->
<%- include('includes/header') %> 
      <div class="row">
<!--sidebar-->
<%- include('includes/sidebar') %> 
        <div class="col-lg-9">
            <div class="row p-3">
              <div class="col-lg-12">
                <% if(msg1!="") {  %>
                    <div class="alert alert-primary" role="alert">
                        <strong><%= msg1 %></strong>
                    </div>
                    <% }  %>
                <form action="/admin/changepwd" method="post">
                    <div class="form-group">
                        <label for="">UserId</label>
                        <input type="text" required value="<%= nm %>" readonly
                          class="form-control" name="adminid" id="" aria-describedby="helpId" placeholder="">
                        <small id="helpId" class="form-text text-muted">*</small>
                      </div>
                        <div class="form-group">
                          <label for="">Old Password</label>
                          <input type="password" required
                            class="form-control" name="opwd" id="" aria-describedby="helpId" placeholder="">
                          <small id="helpId" class="form-text text-muted">*</small>
                        </div>
                        <div class="form-group">
                            <label for="">New Password</label>
                            <input type="password" required
                              class="form-control" name="npwd" id="" aria-describedby="helpId" placeholder="">
                            <small id="helpId" class="form-text text-muted">*</small>
                          </div>
                          <div class="form-group">
                            <label for="">Confirm Password</label>
                            <input type="password" required
                              class="form-control" name="cpwd" id="" aria-describedby="helpId" placeholder="">
                            <small id="helpId" class="form-text text-muted">*</small>
                          </div>
                          <button type="submit" class="btn btn-primary">Change Password</button>
                </form>
              </div>
            </div>
        </div>
      </div>
 <!--footer-->
 <%- include('includes/footer') %> 