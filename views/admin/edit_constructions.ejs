<!--header-->
<%- include('includes/header') %> 
<div class="row">

<!--sidebar-->
<%- include('includes/sidebar') %>


<div class="col-lg-9">
    <h1 class="text-center">Add_Construction</h1>
    <div class="row p-3">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <% if(msg!="") {%>
            <div class="alert alert-primary" role="alert">
                <strong><%= msg %></strong>
            </div>
            <% }%>
             
        <form action="/admin/edit_constructions" method="post" enctype="multipart/form-data">
            <div class="form-group">
                
              	
                <div class="form-group">
                    <label for="">Id</label>
                    <input type="number" readonly  value="<%= result1[0].id %>"
                        class="form-control" name="id" id="id" aria-describedby="helpId" placeholder="">
                    <small id="helpId" class="form-text text-muted">*</small>
                    </div>
                    <label for="">Name</label>
                    <input type="text" required value="<%= result1[0].name %>"
                        class="form-control" name="name" id="name" aria-describedby="helpId" placeholder="">
                    <small id="helpId" class="form-text text-muted">*</small>
                    </div>
                    <div class="form-group">
                        <label for="">Heading</label>
                        <input type="text" required value="<%= result1[0].heading %>"
                            class="form-control" name="heading" id="" aria-describedby="helpId" placeholder="">
                        <small id="helpId" class="form-text text-muted">*</small>
                        </div>
                    <div class="form-group">
                        <label for="">Descption</label>
                        <input type="text" required value="<%= result1[0].description %>"
                            class="form-control" name="description" id="" aria-describedby="helpId" placeholder="">
                        <small id="helpId" class="form-text text-muted">*</small>
                        </div>
                    
                        <div class="col-sm-6 mb-5">
                            <div class="animate_form field">
                              <label>Icon</label>
                              <input type="file" class="form-control" id="icon" name="icon" accept="image/*" onchange="preView()"  />
                              <input type="hidden" name="update_image" value="" />
                              <div class="upload_img01">
                                
                                  <inm src=""/>
                              </div>
                            </div>
                          </div> 
                        <div class="form-group">
                            <label for="">Status</label>
                            <input type="status" required value="<%= result1[0].status>"
                                class="form-control" name="status" id="" aria-describedby="helpId" placeholder="">
                            <small id="helpId" class="form-text text-muted">*</small>
                            </div>
                            <div class="form-group">
                                <label for="">add_date</label>
                                <input type="date" required value="<%= result1[0].added_date %>"
                                    class="form-control" name="added_date" id="" aria-describedby="helpId" placeholder="">
                                <small id="helpId" class="form-text text-muted">*</small>
                                </div>
                                <div class="form-group">
                                    <label for="">Modified_Date</label>
                                    <input type="date" required value="<%= result1[0].modified_date %>"
                                        class="form-control" name="modified_date" id="" aria-describedby="helpId" placeholder="">
                                    <small id="helpId" class="form-text text-muted">*</small>
                                    </div>
                                   

                        
                       
                       
                          <button type="submit" class="btn btn-primary">update</button>
                          <button type="submit" class="btn btn-primary" onclick="add()">Back</button>
        
        </form>
    </div>   
    </div>


</div>


</div>
<script>
    function add() {
      window.open("http://localhost:8000/admin/constructions");
    }
   
  </script>

