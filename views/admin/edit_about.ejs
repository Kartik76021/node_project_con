<div class="row">

<!--sidebar-->
<%- include('includes/sidebar') %>


<div class="col-lg-9">
    <h1 class="text-center">Edit_About</h1>
    <div class="row p-3">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <% if(msg!="") {%>
            <div class="alert alert-primary" role="alert">
                <strong><%= msg %></strong>
            </div>
            <% }%>
             
        <form action="/admin/edit_about" method="post">
            <div class="form-group">
                
              	
                <div class="form-group">
                    <label for="">Id</label>
                    <input type="text" readonly value="<%= result1[0].id %>"
                        class="form-control" name="id" aria-describedby="helpId" placeholder="">
                    <small id="helpId" class="form-text text-muted">*</small>
                    </div>
                    <div class="form-group">
                        <label for="">Heading</label>
                        <input type="text" required value="<%= result1[0].heading %>"
                            class="form-control" name="heading" id="heading" aria-describedby="helpId" placeholder="">
                        <small id="helpId" class="form-text text-muted">*</small>
                        </div>
                    <div class="form-group">
                        <label for="">Descption</label>
                        <input type="text" required value="<%= result1[0].description %>"
                            class="form-control" name="description" id="description" aria-describedby="helpId" placeholder="">
                        <small id="helpId" class="form-text text-muted">*</small>
                        </div>
                    
                        
                        <div class="form-group">
                            <label for="">Status</label>
                            <input type="status" required value="<%= result1[0].status %>"
                                class="form-control" name="status" id="status" aria-describedby="helpId" placeholder="">
                            <small id="helpId" class="form-text text-muted">*</small>
                            </div>
                            <div class="form-group">
                                <label for="">add_date</label>
                                <input type="date" required value="<%= result1[0].added_date %>"
                                    class="form-control" name="added_date" id="added_date" aria-describedby="helpId" placeholder="">
                                <small id="helpId" class="form-text text-muted">*</small>
                                </div>
                                <div class="form-group">
                                    <label for="">Modified_Date</label>
                                    <input type="date" required value="<%= result1[0].modify_date %>"
                                        class="form-control" name="modify_date" id="modify_date" aria-describedby="helpId" placeholder="">
                                    <small id="helpId" class="form-text text-muted">*</small>
                                    </div>
               
                       
                                    <div class="form-group">
                                    <input label="update" type="submit" class="btn btn-info" value="Update"/>
                                    <input label="back" type="button" class="btn btn-info" value="back"/>
                                    </div>
        </form>
    </div>   
    </div>


</div>


</div>
